<div class="dashboard-body">
  <div class="row">

    <div class="col-3">
      <%= render "shared/left_navbar"%>
    </div>

    <div class="col-9">
      <div class="container mt-3">

        <h1>Mis grupos</h1>

          <% @groups.each do |group| %>
            <div class="mt-5 mb-5">
              <h3><%= group.name %> <%= link_to group_path(group) do %>
                <button type="button" class="btn btn-primary" style="color: white;">
                  <i class="fa-solid fa-circle-info"></i>
                </button>
              <% end %></h3>
              <p><%= group.description %></p>
            </div>
          <% end %>

          <%= link_to '+ Crear grupo', new_group_path, class: "btn btn-success" %>

      </div>
    </div>
  </div>
</div>

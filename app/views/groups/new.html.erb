<div class="dashboard-body">
  <div class="blue-bg container p-5">
    <div class="row">
      <div class="col-3">
        <%= render "shared/left_navbar"%>
      </div>
      <div class="col-9 text-white">
        <h1>Crea un nuevo grupo</h1>

        <div>
          <img src="https://img.icons8.com/bubbles/500/000000/form.png" class="bg-img">
        </div>

        <div class="form mt-4">
          <%= simple_form_for @group do |f| %>
            <%= f.input :name, label: 'Nombre del grupo', placeholder: 'Familiar, Empresarial, etc...' %>
            <%= f.input :description, label: '¿De qué trata el grupo?', as: :text %>
            <%= f.submit 'Crear grupo', class: "btn btn-blue mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

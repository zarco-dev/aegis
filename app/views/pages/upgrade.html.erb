            <input type="email" class="email__premium" required>
        </div>
      </div>

      <div class="data__card">
        <div class="info__premium">
          <div class="item">
            <label for="" class="xxxx">Numero tarjeta</label>
            <input title="Ingresa 16 numeros conservando un espacio cada 4" pattern="[0-9]{4}\s[0-9]{4}\s[0-9]{4}\s[0-9]{4}" type="text" class="input">
          </div>

          <div class="data__info">

            <div class="data__select">
              <p>Expiración</p>
              <div class="select__container">

                <select  class="month" required>

                  <!-- <input title="Ingresa mes" placeholder="mes" type="month" pattern="[0-9]{2}" class="input" required>


<div class="plan__premium">
  <div class="container1">
    <div class="return__arrow">
      <i class="fa-solid fa-circle-arrow-left"></i>
      <!--<a href="#" class="return">Regresar</a>-->
      <%= link_to 'Regresar', dashboard_path, class: "return" %>
    </div>
    <form class="info__plan__premium">
      <h3>Suscripción <span>Premium</span></h3>

      <div class="data__user__email">
        <div class="data__user">
          <label for="" class="usuario">Nombre de usuario</label>
          <input type="text" class="user__premium" required>
        </div>
